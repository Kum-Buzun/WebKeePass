<div class="jumbotron" style="margin-bottom: 1em;">
  <h1>[% stats.name %] <small>[% stats.generator %] [% stats.version %]</small></h1>
  
  <div style="color: #aaa; background-color: #eee;"> 
    <div>Last modification: [% stats.last_modified %]</div>
    <div>Master key changed: [% stats.key_updated_at %]</div>
    <div>Encription/Cipher: [% stats.encoding %]/[% stats.cipher %]</div> 
  </div>
</div>

[% FOREACH nav IN navbar %]
<a href="[% nav.link %]">[% nav.name %]</a> Â»
[% END %]

  [% FOREACH group IN tree.group %]
  <div class="row" style="margin-left: 0.3em; border-bottom: 1px solid #eee; margin-bottom: 0.5em;">

    <!-- Title -->
    <div class="span9">
    <h4 style="margin: 0;"><a href="[% request.path %]/[% group.title %]">[% group.title %]</a></h4>
    </div>

   </div>
  <!-- END rendering of a group -->
  [% END %]

  <!-- entries -->

  [% FOREACH e IN tree.entries %]
  <div class="row">
    <div class="span1"></div>
    <div class="span3">[% e.title %]</div>
    <div class="span2"> [% e.username %] </div>
    <div class="span3">
      <button id="button_[% e.id %]" title="Get the password">Password</button>
    </div>
  </div>

  <script>
  $('#button_[% e.id %]').click(function() {
    $.ajax({
      url: "/password",
      type: "post",
  data: {
        entry: '[% e.id %]'
      },
      success: function(data) {
        window.prompt("[% e.title %] password for [% e.username %]", data['password']);
      },
      error: function() {
        alert("Session expired");
      }
    });
  });
  </script>
  [% END %]


